<div class="text-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h2>Registro</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label 'Nombre' %><br />
          <%= f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label 'Email' %><br />
          <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label 'ContraseÃ±a' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label 'Confirma tu contraseÃ±a' %><br />
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Registrarse", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>
</div>