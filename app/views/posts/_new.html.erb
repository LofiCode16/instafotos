<div class="text-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
        
            <%= form_with(model: @post, local: true) do |f| %>

                <% if @post.errors.any? %>
                    <%= render 'shared/errors', errors: @post.errors.full_messages %>
                <% end %>

                <div class="form-group">
                    <%= f.text_field :image_url, class: 'form-control', placeholder: 'url de la imagen' %>
                </div>

                <div class="form-group">
                    <%= f.text_area :content, class: 'form-control', rows: 3, placeholder: 'descripcion' %>
                </div>

                <div>
                    <%= f.submit 'Publicar', class: 'btn btn-cream' %>
                </div>
            <% end %>

        </div>
    </div>
</div>

